<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
             android:id="@+id/customer_profileImageContainerId"
            android:layout_width="120dp"
            android:layout_height="135dp" >

            <ImageView
                android:id="@+id/customer_profileImageId"
                android:layout_width="120dp"
                android:layout_height="135dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/customer_progressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_centerInParent="true"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/customer_nameId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/customer_profileImageContainerId"
            android:text="Ratheesh sivaraman"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/customer_profileImageContainerId"
            android:layout_marginLeft="15dp"
            android:text="Is this the customer you wants to send the Coupon."
            android:textColor="@color/black" />

        <Button
            android:id="@+id/customer_info_cancel_buttonId"
            android:layout_width="75dip"
            android:layout_height="45dip"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/info_text"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonhover"
            android:padding="10dip"
            android:text="Cancel"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/customer_info_proceed_buttonId"
            android:layout_width="75dip"
            android:layout_height="45dip"
            android:layout_alignParentRight="true"
            android:layout_below="@id/info_text"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/buttonhover"
            android:padding="10dip"
            android:text="Proceed"
            android:textColor="@color/black" />
    </RelativeLayout>

</LinearLayout>