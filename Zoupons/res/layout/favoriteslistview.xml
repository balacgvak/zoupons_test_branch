<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/border_curve">

    <ImageView
        android:id="@+id/favourite_storeImageId"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp" 
        />

    <TextView
        android:id="@+id/favourite_storeNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:layout_toRightOf="@id/favourite_storeImageId"
        android:textColor="@color/black" 
        android:textStyle="bold"
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/favourite_storecategoryId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@id/favourite_storeNameId"
        android:layout_alignLeft="@id/favourite_storeNameId"
        android:textSize="12sp"
        android:textColor="@color/black" />
    
    <TextView
        android:id="@+id/favourite_storeTypeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/favourite_storecategoryId"
        android:layout_alignLeft="@id/favourite_storecategoryId"
        android:textSize="12sp"
        android:textColor="@color/black"
         />
     <TextView
        android:id="@+id/favourite_storeDistanceId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/favourite_storecategoryId"
        android:textColor="@color/black"
        android:paddingRight="5dp"
        android:textSize="12sp"
         />
      <TextView
        android:id="@+id/favourite_storeLikesId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/favourite_storeNameId"
        android:drawableLeft="@drawable/store_like"
        android:textColor="@color/black"
        android:paddingRight="5dp"
        android:textSize="12sp"
        android:drawablePadding="5dp"
        android:gravity="center"
         />
     

</RelativeLayout>