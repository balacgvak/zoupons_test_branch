<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/storeowner_pointofsale_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- Header -->

    <com.us.zoupons.storeowner.Header
        android:id="@+id/storeowner_pointofsale_part2_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.us.zoupons.storeowner.Header>

    <!-- pointofsale MiddleView Container -->

    <RelativeLayout
        android:id="@+id/storeowner_pointofsale_part2_middleview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/storeowner_pointofsale_part2_footer"
        android:layout_below="@id/storeowner_pointofsale_part2_header"
        android:background="@color/custombackground"
        android:padding="2dip" >

        <!-- Telephone layout -->

        <LinearLayout
            android:id="@+id/initial_telephone_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Enter customer phone number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/storeowner_pointofsale_part2_phoneNumberId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:hint="Enter Telephone Number"
                android:inputType="phone"
                android:textSize="15sp"
                android:singleLine="true" />

            <Button
                android:id="@+id/storeowner_pointofsale_part2_phoneNumber_submit"
                android:layout_width="100dip"
                android:layout_height="45dip"
                android:layout_gravity="center"
                android:background="@drawable/buttonhover"
                android:text="Submit"
                android:textColor="@color/black"
                android:textSize="15dip"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- storeowner _pointofsale customer Info details -->

        <LinearLayout
            android:id="@+id/storeowner_customer_pointofsale_part2_info"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="5dip"
            android:visibility="gone" >

            <!-- storeowner _pointofsale customer info Header -->

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical" >

                    <!-- storeowner _pointofsale customer details -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <!-- Contact Information Items -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical" >

                            <RelativeLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/settings_contactborder"
                                android:paddingRight="5dp"
                                android:paddingTop="5dp" >

                                <ImageView
                                    android:id="@+id/storeowner_customer_pointofsale_part2_ImageId"
                                    android:layout_width="120dp"
                                    android:layout_height="135dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginRight="5dp"
                                    android:adjustViewBounds="true"
                                    android:paddingLeft="5dp"
                                    android:scaleType="fitXY"
                                    android:clickable="true"
                                    android:src="@drawable/profileimage"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/storeowner_customer_pointofsale_part2_ImageText"
                                    android:layout_below="@id/storeowner_customer_pointofsale_part2_ImageId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Add Image"
                                    android:textColor="@color/black"
                                    android:textStyle="bold"
                                    android:paddingLeft="30dp"  
                                    android:layout_marginTop="5dp"                                
                                     />

                                <LinearLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_toRightOf="@id/storeowner_customer_pointofsale_part2_ImageId"
                                    android:orientation="vertical" >

                                    <!-- First Name -->

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical" >

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingBottom="5dip" >

                                            <TextView
                                                android:id="@+id/txtFirstName"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="First Name"
                                                android:textColor="@color/black"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingBottom="5dip" >

                                            <EditText
                                                android:id="@+id/storeowner_customer_pointofsale_part2_FirstName"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="First Name"
                                                android:singleLine="true"
                                                android:textSize="15sp"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/storeowner_customer_pointofsale_part2_FirstName_text"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:editable="false"
                                                android:focusable="false"
                                                android:focusableInTouchMode="false"
                                                android:singleLine="true"
                                                android:textColor="@color/black" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <!-- Last Name -->

                                    <LinearLayout
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:orientation="vertical" >

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1"
                                            android:paddingBottom="5dip" >

                                            <TextView
                                                android:id="@+id/txtLastName"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:text="Last Name"
                                                android:textColor="@color/black"
                                                android:textSize="16sp"
                                                android:textStyle="bold" />
                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="fill_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_weight="1" >

                                            <EditText
                                                android:id="@+id/storeowner_customer_pointofsale_part2_LastName"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:hint="Last Name"
                                                android:singleLine="true"
                                                android:textColor="@color/black" />

                                            <TextView
                                                android:id="@+id/storeowner_customer_pointofsale_part2_LastName_text"
                                                android:layout_width="fill_parent"
                                                android:layout_height="wrap_content"
                                                android:editable="false"
                                                android:focusable="false"
                                                android:focusableInTouchMode="false"
                                                android:singleLine="true"
                                                android:textColor="@color/black" />
                                        </LinearLayout>
                                    </LinearLayout>
                                </LinearLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Existing Customer Pin Conatiner -->

                    <LinearLayout
                        android:id="@+id/storeowner_customer_pointofsale_part2_pin_container"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="Enter Pin to unlock wallet,then choose payment method:"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:padding="5dp" >

                            <EditText
                                android:id="@+id/storeowner_customer_pointofsale_part2_pin_value"
                                android:layout_width="100dp"
                                android:layout_height="wrap_content"
                                android:hint="PIN"
                                android:inputType="textPassword"
                                android:maxLength="4"
                                android:textSize="15sp"
                                android:singleLine="true" />

                            <Button
                                android:id="@+id/storeowner_pointofsale_part2_unlock_button"
                                android:layout_width="@dimen/cancelbuttonwidth"
                                android:layout_height="@dimen/cancelbuttonheight"
                                android:layout_marginLeft="20dp"
                                android:background="@drawable/buttonhover"
                                android:text="Unlock"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Non Zoupons customer email address -->

                    <LinearLayout
                        android:id="@+id/storeowner_new_cusotmer_pointofsale_part2_emailidcontainer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="3dp"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/txtEmail"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/storeowner_customer_pointofsale_part2_EmailId"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:hint="Email id"
                            android:singleLine="true"
                            android:textColor="@color/black" />
                    </LinearLayout>
                    
                     <LinearLayout
                        android:id="@+id/storeowner_new_cusotmer_pointofsale_part2_addcard_detailContainer"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Card Added : "
                            android:gravity="right"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                             />
                        <TextView
                            android:id="@+id/txtAddedCardMaskNumber"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:textSize="16sp"
                             />
                    </LinearLayout>

                    <!-- Non Zoupons Customer amount details -->

                    <LinearLayout
                        android:id="@+id/mobilepay_amountdetails"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_border"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="30dp"
                                android:text="Amount"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/dollar_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$"
                                    android:textColor="@color/black"
                                    android:textSize="16sp" />

                                <EditText
                                    android:id="@+id/mobilepay_amount_value"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:focusable="false"
                                    android:hint="Amount"
                                    android:inputType="phone"
                                    android:singleLine="true"
                                    android:textColor="@color/black" />

                                <TextView
                                    android:id="@+id/mobilepay_amount_valueTextId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="30dp"
                                android:text="Tip"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/dollar_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:visibility="invisible" />

                                <FrameLayout
                                    android:id="@+id/mobilepay_tip_container"
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:orientation="horizontal" >

                                    <EditText
                                        android:id="@+id/mobilepay_tip_value"
                                        android:layout_width="120dp"
                                        android:layout_height="wrap_content"
                                        android:clickable="true"
                                        android:enabled="true"
                                        android:focusable="false"
                                        android:hint="Tip"
                                        android:singleLine="true"
                                        android:text="0%"
                                        android:textColor="@color/black" />

                                    <ImageView
                                        android:id="@+id/mobilepay_tip_contextImage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:layout_marginRight="0dip"
                                        android:layout_marginTop="1dip"
                                        android:background="@drawable/step2_downarrow" />
                                </FrameLayout>

                                <TextView
                                    android:id="@+id/mobilepay_tip_textId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="left"
                                    android:paddingLeft="10dp"
                                    android:text="$0"
                                    android:textColor="@color/black"
                                    android:textSize="16sp"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp" >

                            <View
                                android:layout_width="0dp"
                                android:layout_height="1dp"
                                android:layout_weight="1" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="10dp" >

                                <View
                                    android:layout_width="120dp"
                                    android:layout_height="1dp"
                                    android:background="@color/black" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:paddingRight="30dp"
                                android:text="Total"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/mobilepay_total_value"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="10dp"
                                android:text="$0.00"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Non Zoupons Customer Add Card Button -->

                    <Button
                        android:id="@+id/storeowner_pointofsale_part2_addcard"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/cancelbuttonheight"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/buttonhover_new"
                        android:text="Add Card"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/storeowner_pointofsale_part2_authorizeButtonId"
                        android:layout_width="@dimen/cancelbuttonwidth"
                        android:layout_height="@dimen/cancelbuttonheight"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dip"
                        android:layout_marginTop="10dip"
                        android:background="@drawable/buttonhover"
                        android:text="Authorize"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:visibility="gone" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

    <!-- Footer View -->

    <LinearLayout
        android:id="@+id/storeowner_pointofsale_part2_footer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/header_2"
        android:visibility="visible" >

        <TextView
            android:id="@+id/storeowner_pointofsale_part2_Back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:drawableTop="@drawable/back"
            android:gravity="center"
            android:text="Back"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/menubar_splitter1"
            android:layout_width="1dip"
            android:layout_height="fill_parent"
            android:background="@color/menubarsplitter"
            android:visibility="invisible" />

        <!-- Invisible views -->

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <!-- FreezeView -->

    <Button
        android:id="@+id/storeowner_pointofsale_part2_freeze"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/qrcode_transparent"
        android:visibility="gone" />

</RelativeLayout>