<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_introduction_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:visibility="visible" >

    <RelativeLayout
        android:id="@+id/app_introduction_bottom_container"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/black"
        android:layout_alignParentBottom="true" >

        <TextView
            android:id="@+id/app_intro_skip_textId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="@string/app_intro_skip_text"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/app_intro_skip_checkboxId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/app_intro_skip_textId" />

        <Button
            android:id="@+id/app_intro_skip_button"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/buttonhover"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Got It"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/app_introduction_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/app_introduction_bottom_container"
        android:scaleType="fitXY"
        android:src="@drawable/app_introduction" />

</RelativeLayout>