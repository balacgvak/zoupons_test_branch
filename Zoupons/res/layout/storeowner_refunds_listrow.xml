<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_curve"
    android:orientation="horizontal"
    android:paddingTop="0dip"
    android:paddingBottom="0dip"
    android:id="@+id/parentview" >

    <TextView
        android:id="@+id/refund_purchasedate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:text="purchased date"
        android:textColor="@color/black"
        android:textSize="12dip"
        android:layout_gravity="center_vertical"
        android:visibility="visible" />

    <TextView
        android:id="@+id/refund_totalpaid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Purchase"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/refund_totalrefunded"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Refund"
        android:textColor="@color/black"
        android:layout_gravity="center_vertical"
        android:textSize="15dip" />

    <TextView
        android:id="@+id/refund_netamount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:text="Net"
        android:textColor="@color/black"
        android:textSize="15dip"
        android:layout_gravity="center_vertical"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/listitem_arrow_Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/balloon_disclosure"
        android:visibility="visible" />

</LinearLayout>