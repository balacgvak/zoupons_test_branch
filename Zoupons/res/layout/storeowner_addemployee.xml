                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Employee Code"
                                        android:textColor="@color/black"
                                        android:textSize="16sp"
                                        android:textStyle="bold" />

                                    <EditText
                                        android:id="@+id/addemployee_employeecode_value"
                                        android:layout_width="fill_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dip"
                                        android:hint="Employee Code"
                                        android:inputType="phone"
                                        android:singleLine="true"
                                        android:textSize="15sp"
                                        android:textColor="@color/black" />
                                </LinearLayout>

                                <Button
                                    android:id="@+id/employeecode_submit"
                                    android:layout_width="@dimen/cancelbuttonwidth"
                                    android:layout_height="@dimen/cancelbuttonheight"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="15dip"
                                    android:background="@drawable/buttonhover"
                                    android:text="Submit"
                                    android:textSize="15sp"
                                    android:textColor="@color/black"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                    <!-- EmployeeDetails Group Bottom Space -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

