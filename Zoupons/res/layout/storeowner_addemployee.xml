<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addemployee_app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <!-- Header -->

    <com.us.zoupons.storeowner.Header
        android:id="@+id/storeowner_addemployee_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.us.zoupons.storeowner.Header>

    <RelativeLayout
        android:id="@+id/addemployee_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/storeowner_addemployee_footer"
        android:layout_below="@id/storeowner_addemployee_header"
        android:background="@drawable/custombackground"
        android:visibility="visible" >

        <!-- addemployee Mobile Number Container -->

        <LinearLayout
            android:id="@+id/addemployee_employeemobilenumber"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="5dip"
            android:layout_marginTop="10dip"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:visibility="visible" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/StoreOwner_AddEmployees_header1"
                android:textColor="@color/black"
                android:textSize="18dip"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/StoreOwner_AddEmployees_header2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/addemployee_employeemobilenumber_value"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:hint="Mobile Number"
                android:textSize="15sp"
                android:inputType="phone"
                android:singleLine="true" />

            <Button
                android:id="@+id/employeemobilenumber_submit"
                android:layout_width="@dimen/cancelbuttonwidth"
                android:layout_height="@dimen/cancelbuttonheight"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dip"
                android:textSize="15sp"
                android:background="@drawable/buttonhover"
                android:text="Submit"
                android:textColor="@color/black"
                android:textStyle="bold" />
        </LinearLayout>

