<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_curve"
    android:padding="5dip" >

    <LinearLayout
        android:id="@+id/listview_whole_container"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="5dip"
        android:background="@color/white" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:visibility="visible" >

            <ImageView
                android:id="@+id/listitem_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/green_callout" >
            </ImageView>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/listview_address_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/listview_address"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:text="address"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/listview_citystatezip_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible" >

                <TextView
                    android:id="@+id/listview_city"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="City"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="5dip"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/listview_state"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="State"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="5dip"
                    android:layout_height="fill_parent" />

                <TextView
                    android:id="@+id/listview_zipcode"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Zipcode"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>