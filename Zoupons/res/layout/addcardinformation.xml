                            android:text="Name as shown on card"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="5dip" />

                        <EditText
                            android:id="@+id/addcardinformation_cardholdername_value"
                            android:layout_width="fill_parent"
