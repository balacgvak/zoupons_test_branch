<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/storeownerdealcards_app"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <!-- Header -->

    <com.us.zoupons.storeowner.Header
        android:id="@+id/storeowneraddcoupon_header"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.us.zoupons.storeowner.Header>

    <!-- Footer View -->

    <RelativeLayout
        android:id="@+id/storeowneraddcoupon_footercontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" >

        <!-- ManageCards MenuBar -->

        <LinearLayout
            android:id="@+id/storeowneraddcoupon_footerinsideholder"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/header_2"
            android:clickable="false"
            android:orientation="horizontal"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/storeowneraddcoupon_footer_back"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_menubar_new"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/storeowneraddcoupon_footer_backimage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/back" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/storeowneraddcoupon_footer_backtext"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="2dip"
                        android:singleLine="true"
                        android:text="Back"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menubar_splitter1"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/menubarsplitter"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/menubar_invisible1"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_menubar_new"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/menubar_qrcode_image"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/qrcode" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/menubar_qrcode_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="2dip"
                        android:singleLine="true"
                        android:text="QR CODE"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menubar_splitter2"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/menubarsplitter"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/menubar_invisible2"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_menubar_new"
                android:clickable="false"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="invisible" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/menubar_search_image"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/search" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/menubar_search_text"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="5dip"
                        android:singleLine="true"
                        android:text="SEARCH"
                        android:textColor="@color/white"
                        android:textSize="10dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/menubar_splitter3"
                android:layout_width="1dip"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:background="@color/menubarsplitter" />

            <LinearLayout
                android:id="@+id/storeowneraddcoupon_footer_save"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@drawable/gradient_menubar_new"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/storeowneraddcoupon_footer_saveimage"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@drawable/save" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <TextView
                        android:id="@+id/storeowneraddcoupon_footer_savetext"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="2dip"
                        android:singleLine="true"
                        android:text="Save"
                        android:textColor="@color/white"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <!-- Middle View -->

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/storeowneraddcoupon_footercontainer"
        android:layout_below="@id/storeowneraddcoupon_header"
        android:layout_margin="2dp"
        android:background="@drawable/custombackground"
        android:scrollbars="none" >

        <!-- Middle View -->

        <LinearLayout
            android:id="@+id/storeowneraddcoupon_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dip" >

            <RelativeLayout
                android:id="@+id/storeowneraddcoupon_header_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dip"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/storeowneraddcoupon_rightmenu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/sample" />

                <TextView
                    android:id="@+id/storeowneraddcoupon_header"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/storeowneraddcoupon_rightmenu"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:lines="2"
                    android:text="Store Name"
                    android:textColor="@android:color/black"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <!-- Select Type -->

            <LinearLayout
                android:id="@+id/selecttype_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/addcoupon_selecttype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Type : "
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="5dip"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/addcoupon_selecttype_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:orientation="horizontal"
                    android:visibility="visible" >

                    <EditText
                        android:id="@+id/addcoupon_selecttype_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="false"
                        android:hint="@string/Storeowner_AddCoupon_SelectType"
                        android:paddingRight="50dip"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/addcoupon_selecttype_contextmenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|center_vertical"
                        android:layout_marginBottom="2dip"
                        android:layout_marginTop="0dip"
                        android:background="@drawable/step2_downarrow"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false" />
                </FrameLayout>
                
                <TextView
                    android:id="@+id/edit_coupon_typeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                     />
                
                
            </LinearLayout>

            <!-- Mobile Number -->

            <LinearLayout
                android:id="@+id/mobile_number_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/addcoupon_mobile_number"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/addcoupon_mobilenumber_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Enter Mobile Number"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Title -->

            <LinearLayout
                android:id="@+id/selecttype_below_space"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="10dip" />

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/addcoupon_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Title"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dip" />

                <EditText
                    android:id="@+id/addcoupon_title_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="Enter Title"
                    android:maxLength="80"
                    android:singleLine="true"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- Coupon Code -->

            <LinearLayout
                android:id="@+id/title_below_space"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="10dip" />

            <LinearLayout
                android:id="@+id/title_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title_below_space"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/addcoupon_couponcode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Coupon Code"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingBottom="5dip" >

                    <EditText
                        android:id="@+id/addcoupon_couponcode_value"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:hint="Enter Coupon code"
                        android:maxLength="15"
                        android:singleLine="true"
                        android:textColor="@color/black"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/addcoupon_couponcode_image"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:src="@drawable/coupons"
                        android:visibility="visible" />
                </LinearLayout>
            </LinearLayout>

            <!-- Barcode Image View -->

            <LinearLayout
                android:id="@+id/barcode_above_space"
                android:layout_width="fill_parent"
                android:layout_height="10dip"
                android:orientation="vertical"
                android:visibility="visible" />

            <FrameLayout
                android:id="@+id/couponbarcode_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"
                 >

                <ImageView
                    android:id="@+id/add_coupon_barcode"
                    android:layout_width="300dp"
                    android:layout_height="100dp"
                    android:background="@drawable/border"
                    android:padding="20dp"
                    android:gravity="center"
                    android:visibility="visible" />

                <ProgressBar
                    android:id="@+id/progess_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />
            </FrameLayout>

            <!-- Activation & Expiration Date Container -->

            <LinearLayout
                android:id="@+id/barcode_imageview_below_space"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="10dip" />

            <RelativeLayout
                android:id="@+id/addcoupon_activationexpiration_wholecontainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- Activation -->

                <LinearLayout
                    android:id="@+id/addcoupon_activation_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/addcoupon_activationdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Activation Date"
                        android:textColor="@color/black"
                        android:textSize="16dip"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="10dip" />

                    <FrameLayout
                        android:id="@+id/addcoupon_activationdate_framecontainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/addcoupon_activationdate_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="Activation Date"
                            android:paddingRight="50dip"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/addcoupon_activationdate_contextmenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginBottom="2dip"
                            android:layout_marginRight="1dip"
                            android:layout_marginTop="0dip"
                            android:background="@drawable/step2_downarrow" />
                    </FrameLayout>
                </LinearLayout>

                <!-- Expiration -->

                <LinearLayout
                    android:id="@+id/addcoupon_expiration_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/addcoupon_expirationdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="Expiration Date"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="10dip" />

                    <FrameLayout
                        android:id="@+id/addcoupon_expirationdate_framecontainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:orientation="horizontal" >

                        <EditText
                            android:id="@+id/addcoupon_expirationdate_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:enabled="true"
                            android:focusable="false"
                            android:hint="Expiration Date"
                            android:paddingRight="50dip"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/addcoupon_expirationdate_contextmenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginBottom="2dip"
                            android:layout_marginRight="1dip"
                            android:layout_marginTop="0dip"
                            android:background="@drawable/step2_downarrow" />
                    </FrameLayout>
                </LinearLayout>
            </RelativeLayout>

            <!-- Description -->

            <LinearLayout
                android:id="@+id/activationexpiration_below_space"
                android:layout_width="fill_parent"
                android:orientation="vertical"
                android:layout_height="10dip" />

            <LinearLayout
                android:id="@+id/description_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/addcoupon_description"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="16dip"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dip" />

                <EditText
                    android:id="@+id/addcoupon_Description_value"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="top"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:minLines="5"
                    android:textSize="15sp" />
            </LinearLayout>

            <!-- One time use per customer -->

            <RelativeLayout
                android:id="@+id/addcoupon_chkbox_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <!--
                     <TextView
                    android:id="@+id/addcoupon_chkbox_textId"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/addcoupon_Checkbox"
                    android:padding="5dp"
                    android:text="One time use per customer account"
                    android:textColor="@color/blue" />
                -->

                <CheckBox
                    android:id="@+id/addcoupon_usagetypeId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:text="One time use per customer account"
                    android:textColor="@color/blue"
                    android:textSize="16sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="10dip" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone" >

                <Button
                    android:id="@+id/addcoupon_cancel"
                    android:layout_width="100dip"
                    android:layout_height="45dip"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/buttonhover"
                    android:text="Cancel"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addcoupon_save"
                    android:layout_width="100dip"
                    android:layout_height="45dip"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buttonhover"
                    android:text="Save"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
    <!-- Freeze Button -->

    <Button
        android:id="@+id/storeowneraddcoupon_freeze"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/qrcode_transparent"
        android:visibility="gone" />

</RelativeLayout>