<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- Store Message Container -->

    <LinearLayout
        android:id="@+id/talktous_contactstore_storecontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/chatblue"
        android:orientation="vertical"
        android:padding="3dip"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talktous_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:textStyle="bold"  />

            <TextView
                android:id="@+id/talktous_contactstore_messagetime_store"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/talktous_contactstore_message_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:maxLength="1000"
            android:text=""
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>

    <!-- User Message Container -->

    <LinearLayout
        android:id="@+id/talktous_contactstore_usercontainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="3dip"
        android:visibility="visible" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/talktous_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible"
                android:layout_alignParentLeft="true"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/talktous_contactstore_messagetime_customer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dip"
            android:textSize="12sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/talktous_contactstore_message_customer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:visibility="visible" />
    </LinearLayout>

</LinearLayout>