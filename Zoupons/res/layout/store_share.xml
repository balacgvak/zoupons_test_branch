        <TextView
            android:id="@+id/social_share_info_text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_header_container"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="&quot;Please use one of the methods below to share our store location with your friends and family &quot;"
            android:textColor="@color/black" />

        <!-- CheckBox Container -->

        <LinearLayout
            android:id="@+id/choose_share_type_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/social_share_info_text" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/social_share_checkboxId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="Social"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/email_share_checkboxId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="Contacts"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- center Container -->

        <LinearLayout
            android:id="@+id/social_share_types_Id"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/social_friends_footerLayoutId"
            android:layout_below="@id/choose_share_type_layout"
            android:visibility="visible"
            android:gravity="center_vertical" >

            <!-- FB container -->

            <LinearLayout
                android:id="@+id/social_fb_like_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_horizontal"
                android:layout_marginLeft="20dip" >

                <ImageView
                    android:id="@+id/Social_fb_share"
                    android:layout_width="100dip"
                    android:layout_height="45dip"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/facebook_new" />
                
                <TextView
                    android:id="@+id/social_fb_likescount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/Social_fb_share"
                    android:background="@drawable/border_curve"
                    android:paddingBottom="10dip"
                    android:paddingLeft="10dip"
                    android:paddingRight="10dip"
                    android:paddingTop="10dip"
                    android:text="0 Shares"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:layout_marginLeft="10dip" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/social_like_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible" >

                <ImageView
                    android:id="@+id/social_like"
                    android:layout_width="100dip"
                    android:layout_height="45dip"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/like"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/social_likescount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dip"
                    android:layout_toRightOf="@id/social_like"
                    android:text="0 Likes"
                    android:textColor="@color/black"
                    android:textSize="18dip"
                    android:visibility="visible" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/friendsearch_layout"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/choose_share_type_layout"
            android:background="@drawable/border"
            android:visibility="gone" >

            <Button
                android:id="@+id/friendsearch_buttonId"
                android:layout_width="65dip"
                android:layout_height="45dip"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:background="@drawable/buttonhover"
                android:padding="10dip"
                android:text="Cancel"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/friendlist_searchId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dip"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/friendsearch_buttonId"
                android:inputType="textNoSuggestions" />

            <ListView
                android:id="@+id/email_friendlistId"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@id/friendlist_searchId"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="10dp"
                android:cacheColorHint="#00000000"
                android:divider="@color/custom_background"
                android:dividerHeight="10dip"
                android:drawSelectorOnTop="false"
                android:visibility="visible" >
            </ListView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/social_import_friend_container"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/social_friends_footerLayoutId"
            android:layout_below="@id/choose_share_type_layout"
            android:layout_margin="2dp"
            android:background="@drawable/border"
            android:visibility="gone" >

            <ListView
                android:id="@+id/social_listId"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:cacheColorHint="#00000000"
                android:divider="@color/custom_background"
                android:dividerHeight="10dip"
                android:drawSelectorOnTop="false" >
            </ListView>
        </RelativeLayout>
    </RelativeLayout>

    <!-- Freeze store_share Button -->

    <Button
        android:id="@+id/social_freeze"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/qrcode_transparent"
        android:visibility="gone" />

</RelativeLayout>