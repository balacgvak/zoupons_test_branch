<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/custombackground"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/linear_forgotpassword"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/border_curve"
                android:orientation="vertical"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/signup_verification_EmailVerificationPasscode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dip"
                    android:text="@string/forgotpassword_emailidheader"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:lineSpacingExtra="5dp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="5dip" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip" >

                    <TextView
                        android:id="@+id/signup_verification_EmailVerificationPasscode"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/forgotpassword_username"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="5dip" />

                    <EditText
                        android:id="@+id/signup_verification_EmailVerificationPasscode_value"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/forgotpassword_username"
                        android:singleLine="true"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="10dip" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingLeft="5dip"
                    android:paddingRight="5dip" >

                    <Button
                        android:id="@+id/forgotpassword_username_skip"
                        android:layout_width="100dip"
                        android:layout_height="45dip"
                        android:layout_alignParentLeft="true"
                        android:background="@drawable/buttonhover"
                        android:text="Cancel"
                        android:textColor="@color/black"
                        android:textSize="15dip"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/forgotpassword_username_ok"
                        android:layout_width="100dip"
                        android:layout_height="45dip"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/buttonhover"
                        android:text="Ok"
                        android:textColor="@color/black"
                        android:textSize="15dip"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:id="@+id/scroll_forgotpassword"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scrollbars="none"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="5dip"
                android:paddingRight="5dip" >

                <LinearLayout
                    android:id="@+id/registration_step2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/border_curve"
                    android:orientation="vertical"
                    android:padding="15dip"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/registration_password"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword_securityquestion_header"
                            android:textColor="@color/black"
                            android:textSize="13dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/registration_confirmpassword"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword_securityquestion1_header"
                            android:textColor="@color/black"
                            android:textSize="15dip"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/registration_securityquestion1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword_securityquestion1"
                            android:textColor="@color/black"
                            android:textSize="13dip" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/registration_answer1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />

                        <EditText
                            android:id="@+id/registration_answer1_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Answer"
                            android:singleLine="true"
                            android:textSize="15sp"
                            android:inputType="textPassword" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/registration_confirmpassword"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword_securityquestion2_header"
                            android:textColor="@color/black"
                            android:textSize="15dip"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/registration_securityquestion2"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/forgotpassword_securityquestion2"
                            android:textColor="@color/black"
                            android:textSize="13dip" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <TextView
                            android:id="@+id/registration_answer1"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:text="Answer 2"
                            android:textColor="@color/black"
                            android:textSize="15dip"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="fill_parent"
                            android:layout_height="10dip" />

                        <EditText
                            android:id="@+id/registration_answer2_value"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:hint="Answer 2"
                            android:singleLine="true" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="10dip" />

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/forgotpassword_skip"
                            android:layout_width="100dip"
                            android:layout_height="45dip"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/buttonhover"
                            android:text="Cancel"
                            android:textColor="@color/black"
                            android:textSize="15dip"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/forgotpassword_save"
                            android:layout_width="100dip"
                            android:layout_height="45dip"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/buttonhover"
                            android:text="Ok"
                            android:textColor="@color/black"
                            android:textSize="15dip"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>